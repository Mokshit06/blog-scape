<div class="post">
  <h1 class="header">{{blogPost.title}}</h1>
  <div class="post-info">
    <div class="img">
      <a href="/users/@{{blogPost.user.username}}">
        <img src="{{blogPost.user.image}}" alt="User image">
      </a>
    </div>
    <div class="info">
      <span class="user-info"><a href="/users/@{{blogPost.user.username}}">{{blogPost.user.displayName}}</a></span>
      <div class="time-info">{{formatDate blogPost.createdAt false}} Â· {{stats blogPost.body true}}
      </div>
    </div>
  </div>
  <div class="post-body">{{{blogPost.body}}}</div>
</div>


<style>
  .header {
    padding: 0;
    font-size: 2.2rem;
  }

  .post {
    width: 69%;
    margin: 23px auto 0;
  }

  .post-info {
    color: rgb(133, 133, 133);
    display: flex;
    align-items: center;
  }

  .img img {
    width: 48px;
    height: 48px;
    border-radius: 50%;
  }

  .user-info a {
    color: rgb(219, 219, 219);
    font-weight: 500;
    margin-bottom: 7px;
    display: block;
  }

  .info {
    margin-left: 13px;
    font-size: 16px;
  }

  .post-body {
    color: #d8d8d8;
    font-family: 'Karla', sans-serif;
    font-size: 1.34rem;
    font-weight: 400;
    line-height: 1.8;
    margin-top: 30px;
    padding: 10px 6px;
    font-weight: 400;
  }

  .post-body a {
    color: #e4e4e4;
    text-decoration: underline;
  }

  .post-body h2 {
    font-size: 1.7rem;
  }


  blockquote {
    background: #252525;
    border-left: 10px solid #2d88ff;
    margin: 1.5em 3px;
    padding: 0.6em 10px;
    quotes: "\201C""\201D""\2018""\2019";
  }

  blockquote:before {
    color: #2d88ff;
    content: open-quote;
    font-size: 4em;
    line-height: 0.1em;
    margin-right: 0.25em;
    vertical-align: -0.4em;
  }

  blockquote p {
    font-style: italic;
    display: inline;
  }

  ol {
    list-style: decimal inside;
  }

  ul {
    list-style: inside;
  }
</style>